{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": ["<rootDir>/test"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": { "^.+\\.(t|j)s$": "ts-jest" },
  "moduleNameMapper": { "^src/(.*)$": "<rootDir>/src/$1" },
  "testTimeout": 30000,
  "verbose": true,
  "detectOpenHandles": true,
  "maxWorkers": "50%",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "forceExit": true
}
